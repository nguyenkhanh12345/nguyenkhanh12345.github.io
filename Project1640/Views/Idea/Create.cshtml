@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <!-- trỏ đến vị trí chỉnh xóa sửa -->
        <li class="breadcrumb-item"><a asp-controller="Home"       asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Index">Roles</a></li>
        <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Index">Edit</a></li>
        <li class="breadcrumb-item"><a asp-controller="Categories" asp-action="Delete">Delete</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
    <h6 class="slim-pagetitle">Create</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <label class="section-title">Create</label>
    <p class="mg-b-20 mg-sm-b-40">A form with a label on top of each form control.</p>
    <form action="/" method="post">
        <div class="form-layout">
            <div class="row mg-b-25">
                <!-- Truyền dữ liệu -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Firstname: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" name="firstname" value="....." placeholder="Enter firstname">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Lastname: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" name="lastname" value="....." placeholder="Enter lastname">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label">Email address: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" name="email" value=".....@@yourdomain.com" placeholder="Enter email address">
                    </div>
                </div><!-- col-4 -->
                <div class="col-lg-8">
                    <div class="form-group mg-b-10-force">
                        <label class="form-control-label">Discription: <span class="tx-danger">*</span></label>
                        <input class="form-control" type="text" name="Discription" value="....." placeholder="Enter Discription">
                    </div>
                </div><!-- col-8 -->
            </div><!-- row -->
            <!-- confirm data -->
            <div class="form-layout-footer">
                <button class="btn btn-primary bd-0">Submit Form</button>
                <button class="btn btn-secondary bd-0">Cancel</button>
            </div><!-- form-layout-footer -->
        </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->
